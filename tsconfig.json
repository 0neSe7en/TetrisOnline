{
    "compilerOptions": {
        "target": "es6",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "lib": ["dom", "es6"],
        "pretty": true,
        "skipLibCheck": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "module": "commonjs",
        "noImplicitThis": true,
        "strict": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
